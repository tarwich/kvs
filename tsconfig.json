{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "lib": ["ES2020", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "target": "ES2020",
  },
  "include": [
    "*.js"
  ],
  "exclude": ["node_modules"]
}
